{
  "name": "track-my-reading",
  "version": "0.1.0",
  "description": "App to record reading and see stats",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mj-felix/track-my-reading.git"
  },
  "author": "MJ Felix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mj-felix/track-my-reading/issues"
  },
  "homepage": "https://github.com/mj-felix/track-my-reading#readme",
  "dependencies": {
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-jwt": "^6.1.0",
    "jwks-rsa": "^2.0.4",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "dotenv": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12"
  }
}
